
import { useState } from "react";
import { motion } from "framer-motion";
import { Card, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
// import { Button } from "@/components/ui/button"; // Button component is not used in this file
import {
  MapPin,
  Star,
  Wifi,
  Car,
  Users,
  Phone,
  // Heart, // Replaced by WishlistButton component
  ExternalLink,
  Camera
} from "lucide-react";
import { Link } from "react-router-dom";
import { createPageUrl } from "@/utils";
import WishlistButton from '@/components/wishlist/WishlistButton'; // Corrected import path

export default function PropertyCard({ property, index }) {
  const [imageError, setImageError] = useState(false);
  const [currentImageIndex, setCurrentImageIndex] = useState(0);

  const facilities = property.facilities || [];
  const photos = property.photos || [];
  
  const facilityIcons = {
    wifi: Wifi,
    parking: Car,
    gym: Users,
    ac: Star,
    laundry: Users,
    kitchen: Users,
    security: Users,
    housekeeping: Users
  };

  const getPropertyTypeColor = (type) => {
    switch (type) {
      case 'pg': return 'bg-blue-100 text-blue-800';
      case 'hostel': return 'bg-green-100 text-green-800';
      case 'room': return 'bg-purple-100 text-purple-800';
      case 'flat': return 'bg-orange-100 text-orange-800';
      case 'apartment': return 'bg-pink-100 text-pink-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  };

  const nextImage = (e) => {
    e.stopPropagation();
    e.preventDefault();
    setCurrentImageIndex((prev) => (prev + 1) % photos.length);
  };

  const prevImage = (e) => {
    e.stopPropagation();
    e.preventDefault();
    setCurrentImageIndex((prev) => (prev - 1 + photos.length) % photos.length);
  };

  return (
    <Link to={createPageUrl(`PropertyDetails?id=${property.id}`)}>
      <motion.div
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ duration: 0.5, delay: index * 0.1 }}
      >
        <Card className="group bg-white hover:shadow-xl transition-all duration-500 border border-gray-100 overflow-hidden rounded-2xl">
          <div className="relative overflow-hidden">
            {/* Image Gallery */}
            <div className="relative h-64 bg-gradient-to-br from-gray-100 to-gray-200">
              {photos.length > 0 && !imageError ? (
                <>
                  <img
                    src={photos[currentImageIndex]}
                    alt={property.title}
                    className="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    onError={() => setImageError(true)}
                  />
                  {photos.length > 1 && (
                    <>
                      <button
                        onClick={prevImage}
                        className="absolute left-2 top-1/2 transform -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white rounded-full w-8 h-8 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
                      >
                        ‚Äπ
                      </button>
                      <button
                        onClick={nextImage}
                        className="absolute right-2 top-1/2 transform -translate-y-1/2 bg-black/50 hover:bg-black/70 text-white rounded-full w-8 h-8 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity"
                      >
                        ‚Ä∫
                      </button>
                      <div className="absolute bottom-2 left-1/2 transform -translate-x-1/2 flex space-x-1">
                        {photos.map((_, i) => (
                          <div
                            key={i}
                            className={`w-2 h-2 rounded-full transition-colors ${
                              i === currentImageIndex ? 'bg-white' : 'bg-white/50'
                            }`}
                          />
                        ))}
                      </div>
                    </>
                  )}
                </>
              ) : (
                <div className="flex items-center justify-center h-full">
                  <Camera className="w-12 h-12 text-gray-400" />
                </div>
              )}
              
              {/* Badges */}
              <div className="absolute top-4 left-4 flex flex-wrap gap-2">
                <Badge className={getPropertyTypeColor(property.property_type)}>
                  {property.property_type?.toUpperCase()}
                </Badge>
                {property.featured && (
                  <Badge className="bg-yellow-100 text-yellow-800 border-yellow-300">
                    ‚≠ê Featured
                  </Badge>
                )}
                {property.availability_status === 'available' && (
                  <Badge className="bg-green-100 text-green-800">
                    Available
                  </Badge>
                )}
              </div>

              {/* Wishlist Button */}
              <div className="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
                <WishlistButton 
                  propertyId={property.id} 
                  className="w-10 h-10 bg-white/90 hover:bg-white rounded-full"
                />
              </div>
            </div>

            <CardContent className="p-6">
              <div className="space-y-4">
                {/* Title and Price */}
                <div className="flex justify-between items-start">
                  <div>
                    <h3 className="text-xl font-bold text-gray-900 group-hover:text-sky-600 transition-colors">
                      {property.title}
                    </h3>
                    <p className="text-sm text-gray-600 flex items-center gap-1 mt-1">
                      <MapPin className="w-4 h-4" />
                      {property.city}
                    </p>
                  </div>
                  <div className="text-right">
                    <p className="text-2xl font-bold text-gray-900">
                      ‚Çπ{property.rent_amount?.toLocaleString()}
                    </p>
                    <p className="text-sm text-gray-500">
                      {property.rent_type === 'monthly' ? '/month' : 
                       property.rent_type === 'per_bed' ? '/bed' : '/property'}
                    </p>
                  </div>
                </div>

                {/* Distance */}
                {property.distance != null && (
                  <p className="text-sm text-sky-600 font-medium">
                    üìç {property.distance.toFixed(1)} km away
                  </p>
                )}
                {/* New: Near Me Search for Students */}
                {property.nearest_landmark && property.distance_to_landmark != null && (
                  <p className="text-sm text-purple-600 font-medium mt-1">
                    üéì {property.distance_to_landmark.toFixed(1)} km from {property.nearest_landmark}
                  </p>
                )}

                {/* Facilities & Sharing */}
                <div className="flex flex-wrap gap-2">
                  {/* Sharing Options */}
                  {(property.sharing_options || []).map((option) => (
                    <Badge key={option} variant="outline" className="capitalize border-purple-300 text-purple-700">
                      {option}
                    </Badge>
                  ))}
                  {/* Facilities */}
                  {(property.facilities || []).slice(0, 3).map((facility, i) => {
                    const IconComponent = facilityIcons[facility.toLowerCase()] || Star;
                    return (
                      <div key={i} className="flex items-center gap-1 text-xs text-gray-600 bg-gray-100 rounded-full px-2 py-1">
                        <IconComponent className="w-3 h-3" />
                        <span>{facility}</span>
                      </div>
                    );
                  })}
                  {(property.facilities || []).length > 3 && (
                    <span className="text-xs text-gray-500">+{property.facilities.length - 3} more</span>
                  )}
                </div>

                {/* Owner Contact */}
                <div className="flex items-center justify-between pt-4 border-t border-gray-100">
                  <div className="text-sm">
                    <p className="font-medium text-gray-900">{property.owner_name}</p>
                    <p className="text-gray-600">Property Owner</p>
                  </div>
                  <div className="flex gap-2">
                    <a
                      href={`tel:${property.owner_phone}`}
                      className="p-2 bg-sky-50 text-sky-600 rounded-lg hover:bg-sky-100 transition-colors"
                      onClick={(e) => e.stopPropagation()}
                    >
                      <Phone className="w-4 h-4" />
                    </a>
                    <div
                      className="p-2 bg-gray-100 text-gray-600 rounded-lg hover:bg-gray-200 transition-colors"
                    >
                      <ExternalLink className="w-4 h-4" />
                    </div>
                  </div>
                </div>
              </div>
            </CardContent>
          </div>
        </Card>
      </motion.div>
    </Link>
  );
}
